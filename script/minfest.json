{
  "manifest_version": 3,
  "name": "My Simple Userscript Extension",
  "version": "1.0",
  "description": "A Chrome extension converted from a userscript.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Or specify specific URLs where your script should run
      "js": ["content.js"]
    }
  ]
}
